{
  "compilerOptions": {
    "esModuleInterop": true,
    "isolatedModules": true,
    "target": "esnext",
    "module": "esnext",
    "types": ["node"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationDir": "lib",
    "emitDeclarationOnly": true
  },
  "include": [
    "src/pipes/**/*",
  ],
  "exclude": [
    "node_modules"
  ],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module":  "commonjs"
    },
    "include": [
      "tests/**/*"
    ]
  },
}
